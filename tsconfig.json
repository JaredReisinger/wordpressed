{
  "compilerOptions": {
    "incremental": true,

    "lib": ["es2023"],
    "module": "es2022",
    "target": "eS2022",
    "moduleResolution": "node16",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true
  }
}
