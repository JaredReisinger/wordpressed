{
  "compilerOptions": {
    "incremental": true,

    "lib": ["es2023"],
    "module": "es2022",
    "target": "es2023",
    "moduleResolution": "node16",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  }
}
